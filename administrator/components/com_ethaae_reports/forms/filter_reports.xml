<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_ETHAAE_REPORTS_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_ETHAAE_REPORTS_FILTER_STATE"
               description="COM_ETHAAE_REPORTS_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="fk_reporttype_id" type="sql" label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_FK_REPORTTYPE_ID" query="SELECT `id` AS `id`, `name` AS val FROM `#__ethaae_report_types`" header="COM_ETHAAE_REPORTS_REPORTS_FK_REPORTTYPE_ID_FILTER" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>

        <field name="fk_institute_id"
               type="sql"
               label="COM_ETHAAE_REPORTS_FK_INSTITUDE_ID_FILTER"
               query="SELECT u.id,u.name_el FROM `#__ethaae_all_units` as u inner join #__ethaae_reports as r ON r.fk_institute_id = u.id"
               header="COM_ETHAAE_REPORTS_FK_INSTITUDE_ID_FILTER"
               key_field="id"
               value_field="name_el"
               class="inputbox"
               onchange="this.form.submit()"
               translate="false"
        />


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_ETHAAE_REPORTS_LIST_FULL_ORDERING"
               description="COM_ETHAAE_REPORTS_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_ETHAAE_REPORTS_ID_ASC</option>
            <option value="a.id DESC">COM_ETHAAE_REPORTS_ID_DESC</option>
            <option value="a.report_year ASC">COM_ETHAAE_REPORTS_REPORT_YEAR_ASC</option>
            <option value="a.report_year DESC">COM_ETHAAE_REPORTS_REPORT_YEAR_DESC</option>
            <option value="a.session_date ASC">COM_ETHAAE_REPORTS_SESSION_DATE_ASC</option>
            <option value="a.session_date DESC">COM_ETHAAE_REPORTS_SESSION_DATE_DESC</option>
            <option value="a.valid_from ASC">COM_ETHAAE_REPORTS_VALID_FROM_ASC</option>
            <option value="a.valid_from DESC">COM_ETHAAE_REPORTS_VALID_FROM_DESC</option>
            <option value="a.valid_to ASC">COM_ETHAAE_REPORTS_VALID_TO_ASC</option>
            <option value="a.valid_to DESC">COM_ETHAAE_REPORTS_VALID_TO_DESC</option>
        </field>

       <field name="limit"
               type="limitbox"
               label="COM_ETHAAE_REPORTS_LIST_LIMIT"
               description="COM_ETHAAE_REPORTS_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>