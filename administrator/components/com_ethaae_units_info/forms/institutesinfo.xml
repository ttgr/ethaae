<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Ethaaunitsinfo\Component\Ethaae_units_info\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_MODIFIED_BY"/>
    <field name="created" type="timecreated" label="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_CREATED" description="COM_ETHAAE_UNITS_INFO_FORM_DESC_INSTITUTESINFO_CREATED" hidden="true" hint="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_CREATED"/>
    <field name="modified" type="timeupdated" label="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_MODIFIED" description="COM_ETHAAE_UNITS_INFO_FORM_DESC_INSTITUTESINFO_MODIFIED" hidden="true" hint="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_MODIFIED"/>
    <field name="fk_unit_id"
           type="sql"
           label="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_FK_UNIT_ID"
           description="COM_ETHAAE_UNITS_INFO_FORM_DESC_INSTITUTESINFO_FK_UNIT_ID"
           default="0"
           query="select
                    `i`.`id` AS `id`,
                     concat(`t`.`short_code_el`, ':: ', `i`.`title_el`) AS `name_el`
                  from
                      `#__ethaae_institutes_structure` `i`
                      join `#__ethaae_unit_type` `t` on(`i`.`unit_type_id` = `t`.`id`)
                      LEFT JOIN #__ethaae_institutes_info m on (i.id = m.fk_unit_id)
                  where t.grouping=1 AND i.ceasedate is null AND m.id is null"
           key_field="id"
           translate="false"
           value_field="name_el"
           required="true"
    />
    <field name="description_el" editor="|" buttons="false" filter="JComponentHelper::filterText" type="editor" label="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_DESCRIPTION_EL" description="COM_ETHAAE_UNITS_INFO_FORM_DESC_INSTITUTESINFO_DESCRIPTION_EL" hint="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_DESCRIPTION_EL"/>
    <field name="url_en" validate="url" type="url" label="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_URL_EN" description="COM_ETHAAE_UNITS_INFO_FORM_DESC_INSTITUTESINFO_URL_EN" hint="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_URL_EN"/>
    <field name="url_el" validate="url" type="url" label="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_URL_EL" description="COM_ETHAAE_UNITS_INFO_FORM_DESC_INSTITUTESINFO_URL_EL" hint="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_URL_EL"/>
    <field name="description_en" editor="|" buttons="false" filter="JComponentHelper::filterText" type="editor" label="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_DESCRIPTION_EN" description="COM_ETHAAE_UNITS_INFO_FORM_DESC_INSTITUTESINFO_DESCRIPTION_EN" hint="COM_ETHAAE_UNITS_INFO_FORM_LBL_INSTITUTESINFO_DESCRIPTION_EN"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
