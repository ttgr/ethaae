<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Ethaaereports\Component\Ethaae_reports\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_MODIFIED_BY"/>
    <field name="created" type="timecreated" label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_CREATED" description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_CREATED" hidden="true" hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_CREATED"/>
    <field name="modified" type="timeupdated" label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_MODIFIED" description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_MODIFIED" hidden="true" hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_MODIFIED"/>
    <field name="params" type="editor" buttons="true" class="inputbox" filter="safehtml" label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_PARAMS" description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_PARAMS" hidden="true" hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_PARAMS"/>

    <field name="fk_reporttype_id"
           type="foreignkey"
           label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_FK_REPORTTYPE_ID"
           description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_FK_REPORTTYPE_ID"
           default=""
           input_type="list"
           table="#__ethaae_report_types"
           key_field="id"
           translate="true"
           value_field="name"
           hide_trashed="1"
           hide_unpublished="1"
           hide_archived="1"
           required="true"
           layout="joomla.form.field.list-fancy-select"
           message="Επιλέξτε Είδος Έκθεσης"
           onchange="onReportTypeChange()"
    />

    <field name="fk_institute_id"
           type="foreignkey"
           label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_FK_INSTITUTE_ID"
           description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_FK_INSTITUTE_ID"
           default="0"
           input_type="list"
           table="#__ethaae_all_units"
           key_field="id"
           translate="false"
           value_field="name_el"
           hide_trashed="1"
           required="true"
           condition="grouping = 1"
           fk_ordering="name_el ASC"
           onchange="getDepartments(this.value);getOtherUnits(this.value);"
    >
      <option value="0">COM_ETHAAE_REPORTS_FK_INSTITUDE_ID_FILTER</option>
    </field>


    <field name="fk_deprtement_id"
           type="foreignkey"
           label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_FK_DEPRTEMENT_ID"
           description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_FK_DEPRTEMENT_ID"
           default="0"
           input_type="list"
           table="#__ethaae_all_units"
           key_field="id"
           translate="false"
           value_field="name_el"
           condition="grouping = 2"
           hide_trashed="1"
           fk_ordering="name_el ASC"
           showon="fk_reporttype_id:2,4[AND]fk_institute_id!:0"
           onchange="getProgrammes(this.value)"
    >
      <option value="0">COM_ETHAAE_REPORTS_FK_DEPRTEMENT_ID_FILTER</option>
    </field>

    <field name="fk_programme_id"
           type="foreignkey"
           label="COM_ETHAAE_FORM_LBL_REPORT_FK_PROGRAMME_ID"
           description="COM_ETHAAE_FORM_DESC_REPORT_FK_PROGRAMME_ID"
           default="0"
           input_type="list"
           table="#__ethaae_all_units"
           key_field="id"
           value_field="name_el"
           translate="false"
           hide_trashed="1"
           condition="grouping = 3"
           fk_ordering="name_el ASC"
           showon="fk_reporttype_id:4[AND]fk_institute_id!:0[AND]fk_deprtement_id!:0"
           onchange="setSelectedUnit(this.value)"
    >
      <option value="0">COM_ETHAAE_REPORTS_FK_PROGRAMME_ID_FILTER</option>
    </field>

    <field name="fk_other_unit_id"
           type="foreignkey"
           label="COM_ETHAAE_FORM_LBL_REPORT_FK_OTHER_UNIT_ID_FILTER"
           description=""
           default="0"
           input_type="list"
           table="#__ethaae_all_units"
           key_field="id"
           value_field="name_el"
           translate="false"
           hide_trashed="1"
           condition="grouping = 4"
           fk_ordering="name_el ASC"
           showon="fk_reporttype_id:5[AND]fk_institute_id!:0"
           onchange="setSelectedUnit(this.value)"
    >
      <option value="0">COM_ETHAAE_FORM_LBL_REPORT_FK_OTHER_UNIT_ID_FILTER_DEFAULT_OPTION</option>
    </field>



    <field name="academic_greek" default="0" type="list" label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_ACADEMIC_GREEK" description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_ACADEMIC_GREEK" hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_ACADEMIC_GREEK">
      <option value="0">COM_ETHAAE_REPORTS_REPORTS_ACADEMIC_GREEK_OPTION_0</option>
      <option value="1">COM_ETHAAE_REPORTS_REPORTS_ACADEMIC_GREEK_OPTION_1</option>
      <option value="2">COM_ETHAAE_REPORTS_REPORTS_ACADEMIC_GREEK_OPTION_2</option>
    </field>
    <field name="session_num"
           size="20"
           maxlength="20"
           filter="safehtml"
           type="text"
           label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_SESSION_NUM"
           description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_SESSION_NUM"
           hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_SESSION_NUM"
           showon="fk_reporttype_id:3,4"
    />
    <field name="report_year" size="4" maxlength="4" filter="int" type="text" required="true" label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_REPORT_YEAR" description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_REPORT_YEAR" hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_REPORT_YEAR"/>
    <field name="session_date"
           class="inputbox"
           timeformat="12"
           filter="none"
           translateformat="false"
           showtime="false"
           singleheader="false"
           todaybutton="false"
           weeknumbers="false"
           filltable="false"
           type="calendar"
           label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_SESSION_DATE"
           description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_SESSION_DATE"
           hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_SESSION_DATE"
           showon="fk_reporttype_id:3,4"/>

    <field name="valid_from"
           class="inputbox"
           timeformat="12"
           filter="server_utc"
           translateformat="false"
           showtime="false"
           singleheader="false"
           todaybutton="false"
           weeknumbers="false"
           filltable="false"
           type="calendar"
           label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_VALID_FROM"
           description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_VALID_FROM"
           hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_VALID_FROM"/>

    <field name="valid_to"
           class="inputbox"
           timeformat="12"
           filter="server_utc"
           translateformat="false"
           showtime="false"
           singleheader="false"
           todaybutton="false"
           weeknumbers="false"
           filltable="false"
           type="calendar"
           label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_VALID_TO"
           description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_VALID_TO"
           hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_VALID_TO"
           showon="fk_reporttype_id:3,4"/>

    <field name="title"
           filter="safehtml"
           type="hidden"
           label="JGLOBAL_TITLE"
           description="JFIELD_TITLE_DESC"
           hint="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_TITLE"
    />
    <field name="fk_unit_id"
           filter="safehtml"
           type="hidden"
           label="COM_ETHAAE_REPORTS_FORM_LBL_REPORT_FK_UNIT_ID"
           description="COM_ETHAAE_REPORTS_FORM_DESC_REPORT_FK_UNIT_ID"
           default=""
    />
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
